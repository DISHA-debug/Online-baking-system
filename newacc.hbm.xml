<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 


  <hibernate-mapping>
  <class name="ONS.newacc" table="newacc">
  <id name="idcard">
  <generator class="assigned"></generator></id>
  <property name="amount" column="amount" type="int"></property>
   <property name="phone" column="phone" type="string"></property>
   <property name="salary" column="salary" type="int"></property>
  <property name="fname" column="fname" type="string"></property>
  <property name="lname" column="lname" type="string"></property>
  <property name="gender" column="gender" type="string"></property>
  <property name="acctype" column="acctype" type="string"></property>
  <property name="nation" column="nation" type="string"></property>
  <property name="birthday" column="birthday" type="string"></property>
   <property name="accopen" column="accopen" type="string"></property>
  <property name="address" column="address" type="string"></property>
  <property name="password" column="password" type="string"></property>
  <property name="repassword" column="repassword" type="string"></property>
  
  </class>
  </hibernate-mapping> 